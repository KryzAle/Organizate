<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2">


    <TextView
        android:id="@+id/tvid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/redondo"     android:orientation="horizontal"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Ubicacion:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

        <TextView
            android:id="@+id/txtUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:text="Ubicacion"
            android:textSize="17sp"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Titulo:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:text="Titulo"
            android:textSize="17sp"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"

           />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Fecha"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:text="Fecha"
            android:textSize="17sp"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Hora Inicio:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

        <TextView
            android:id="@+id/txtInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:text="Inicio"
            android:textSize="17sp"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Hora Fin:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

        <TextView
            android:id="@+id/txtFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:text="Fin"
            android:textSize="17sp"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Nota:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

        <TextView
            android:id="@+id/txtNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:text="Nota"
            android:textSize="17sp"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Notificar"
            android:textSize="17sp"
            android:textStyle="bold" android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

        <TextView
            android:id="@+id/txtNotificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:text="Notificar"
            android:textSize="17sp"
            android:textColor="#FFFF"
            android:fontFamily="@font/coming_soon"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="@font/coming_soon"
        android:text="Eliminar Evento"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        />

</LinearLayout>