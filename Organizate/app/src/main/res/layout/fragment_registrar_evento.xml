<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idLayoutRegistrar"
    tools:context="com.kryzcorp.kryzale.organizate.fragments.RegistrarEventoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Agregar Evento"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/campoUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="UbicacÃ­on" />

        <EditText
            android:id="@+id/campoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titulo" />

        <EditText
            android:id="@+id/campoFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Fecha"
            android:inputType="date" />

        <EditText
            android:id="@+id/campoInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora Inicio"
            android:inputType="time" />

        <EditText
            android:id="@+id/campoFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Hora Fin"
            android:inputType="time" />

        <EditText
            android:id="@+id/campoNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Nota" />

        <EditText
            android:id="@+id/campoNotificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Notificar"
            android:inputType="time" />


    </LinearLayout>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white" />


</RelativeLayout>
